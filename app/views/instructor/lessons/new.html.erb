<br/>
<div class="booyah-box col-10 offset-1">
  <h1>Add a new lesson</h1>
  <%= simple_form_for @lesson, url: instructor_section_lessons_path(current_section), multipart: true, authenticity_token: true do |f| %>
    <%= f.input :title %>
    <%= f.input :subtitle %>
    <%= f.input :videos %>
    <br />
    <%= f.submit "Add the lesson", class: 'btn btn-primary' %>
    <br />
    <br />
  <% end %>
</div>